<div id="<%= dom_id measure %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= measure.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Value:</strong>
    <%= measure.value %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Command:</strong>
    <%= measure.command_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this measure", measure, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this measure', edit_measure_path(measure), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
