<div class="flex h-screen flex-col justify-between border-r bg-white">
  <div class="px-4 py-6">
    <span class="grid h-10 w-32 place-content-center rounded-lg bg-gray-100 text-xs text-gray-600">
      Logo
    </span>

    <nav aria-label="Main Nav" class="mt-6 flex flex-col space-y-1">
      <%= link_to  professors_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
        <i class="fa-solid fa-users"></i>
        <span>Professors</span>
      <% end %>

      <%= link_to  students_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
        <i class="fa-solid fa-users"></i>
        <span>Students</span>
      <% end %>

      <%= link_to  fields_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
        <i class="fa-solid fa-users"></i>
        <span>Fields</span>
      <% end %>

      <%= link_to  coefficients_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
        <i class="fa-solid fa-users"></i>
        <span>Coefficients</span>
      <% end %>

      <%= link_to  courses_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
        <i class="fa-solid fa-users"></i>
        <span>Courses</span>
      <% end %>

      <%= link_to  class_rooms_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
        <i class="fa-solid fa-users"></i>
        <span>Classes</span>
      <% end %>

      <%= link_to  branches_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
        <i class="fa-solid fa-users"></i>
        <span>Branches</span>
      <% end %>

      <details class="group [&_summary::-webkit-details-marker]:hidden">
        <summary class="flex cursor-pointer items-center justify-between rounded-lg px-4 py-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700">
          <div class="flex items-center gap-2">
            <i class="fa-solid fa-users"></i>
            <span class="text-sm font-medium"> Teams </span>
          </div>

          <span class="shrink-0 transition duration-300 group-open:-rotate-180">
           <i class="fa-solid fa-users"></i>
          </span>
        </summary>

        <nav aria-label="" class="mt-2 flex flex-col px-4">
          <%= link_to  professors_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
            <i class="fa-solid fa-users"></i>
            <span>Professors</span>
          <% end %>
          <%= link_to  professors_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
            <i class="fa-solid fa-users"></i>
            <span>Professors</span>
          <% end %>
        </nav>
      </details>


    </nav>
  </div>

  <div class="sticky inset-x-0 bottom-0 border-t border-gray-100">
    <%= link_to root_path, class:"flex items-center gap-2 bg-white p-4 hover:bg-gray-50" do %>
      <%= image_tag "https://images.unsplash.com/photo-1600486913747-55e5470d6f40?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80",class:"h-10 w-10 rounded-full object-cover" %>
      <div>
        <p class="text-xs">
          <strong class="block font-medium">Eric Frusciante</strong>
          <span> eric@frusciante.com </span>
        </p>
      </div>
    <% end %>
  </div>
</div>


