<div class="flex h-screen flex-col justify-between border-r bg-white">
  <div class="px-4 py-6">
    <span class="grid h-10 w-32 place-content-center rounded-lg bg-gray-100 text-xs text-gray-600">
      Logo
    </span>

    <nav aria-label="Main Nav" class="mt-6 flex flex-col space-y-1">
      <%= link_to  users_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
        <i class="fa-solid fa-users"></i>
        <span>Users</span>
      <% end %>

      <%= link_to  customers_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
        <i class="fa-solid fa-users"></i>
        <span>Customer</span>
      <% end %>

      <%= link_to  products_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
        <i class="fa-solid fa-users"></i>
        <span>Products</span>
      <% end %>

      <%= link_to  commands_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
        <i class="fa-solid fa-users"></i>
        <span>Commands</span>
      <% end %>

      <%= link_to  payments_path, class:"flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
        <i class="fa-solid fa-users"></i>
        <span>Payments</span>
      <% end %>

    </nav>
  </div>

  <div class="sticky inset-x-0 bottom-0 border-t border-gray-100">
    <%= link_to root_path, class:"flex items-center gap-2 bg-white p-4 hover:bg-gray-50" do %>
      <%= image_tag "https://images.unsplash.com/photo-1600486913747-55e5470d6f40?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80",class:"h-10 w-10 rounded-full object-cover" %>
      <div>
        <p class="text-xs">
          <strong class="block font-medium">Eric Frusciante</strong>
          <span> eric@frusciante.com </span>
        </p>
      </div>
    <% end %>
  </div>
</div>


