<div id="<%= dom_id coefficient %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Field:</strong>
    <%= coefficient.field_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Branch:</strong>
    <%= coefficient.branch_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Value:</strong>
    <%= coefficient.value %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this coefficient", coefficient, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this coefficient', edit_coefficient_path(coefficient), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
