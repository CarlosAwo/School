<div id="<%= dom_id course %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Professor:</strong>
    <%= course.professor_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Branch:</strong>
    <%= course.branch_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Duration:</strong>
    <%= course.duration %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= course.title %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this course", course, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this course', edit_course_path(course), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
